<div class="flex flex-col space-y-2">
  <!-- *** SQUADRON -->
  <div class="font-bold text-sepia-300 ">
    <p><span id="avail_tp"><%= @avail_tp %></span> TP remaining</p>
  </div>

  <!-- *** GROUPS -->
  <%= build_from_list(:fighter_group, @groups) %>

  <!-- *** END PHASE -->
  <button
    class="<%= button_styling([disabled: !@done?]) %>"
    id="end_phase"
    <%= if @done? do %>
    phx-click="end_phase"
    <% else %>
    disabled
    <% end %>
  >
    End Phase
  </button>

</div>
