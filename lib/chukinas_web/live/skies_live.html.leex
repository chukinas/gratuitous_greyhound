<!-- *** HEADER -->
<h1 class="text-orange-500 text-5xl font-bold text-center">
  Skies Above the Reich
</h1>

<!-- *** TURN MANAGER -->
<%= render_component @vm, :turn_manager  %>

<!-- *** ESCORT STATIONS -->
<%= render_component @vm, :escort_stations  %>

<!-- *** MAP -->
<div class="grid" style="background-color: lightblue">
  <%= for space <- @vm.spaces do %>
  <div
    style="
      grid-area: <%= space.y * 2 + 1 %> / <%= space.x * 2 + 1 %>;
      background-color: deepskyblue;
      color: white;
    "
  >
    <%= space.lethal_level %>
  </div>
  <% end %> <%= for {x, y} <- @vm.bombers do %>
  <div
    style="
      grid-area: <%= y * 2 %> / <%= x * 2 %>;
      background-color: black;
      color: white;
    "
  >
    â†–
  </div>
  <% end %>
</div>

<%= for box <- @vm.boxes do %>
<div><%= box %></div>
<% end %>

